.content{
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
}
.margin_bottom{
		margin-bottom: 12rpx;
}
.text_center{
		text-align: center;
}
.modal{
		z-index: 999;
		position: fixed;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		background:rgba(0, 0, 0, 0.4);
	    filter:alpha(opacity=60);  /*设置透明度为60%*/
		 /*非IE浏览器下设置透明度为60%*/
		/* opacity:0.6; */
		width: calc(100vw);
		height: calc(100vh);
		border: 1rpx solid #AAA;
		display: flex;
		align-items: center;
		justify-content: center;
}
.uni-flex-layout-row{
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-around;
}
.modal_title{
		color: #222;
		margin-top: 10rpx;
		margin-bottom: 20rpx;
		font-size: 1.0rem;
		font-weight: bold;
}
